<div class="post">
  <div class="row">
    <%= form_tag("/top/#{@tweet.id}", method: :patch ) do %>
    <h3>
      編集する
    </h3>
    <div class="field">
      <textarea name="title" placeholder="title"><%= @tweet.title %></textarea>
    </div>
    <div class="field">
      <input placeholder="Image Url" type="text" name="image" value="<%= @tweet.image %>" autofocus="true">
    </div>
    <div class="field">
      <textarea cols="30" name="text" placeholder="text" rows="10"><%= @tweet.text %></textarea>
    </div>
    <div class="field">
      <input type="submit" value="SENT">
    </div>
    <% end %>
  </div>
</div>